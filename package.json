{
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.37",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.6",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.5.0",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "serve": "nodemon --exec ts-node src/index.ts -e ts",
    "build": "tsc",
    "test": "mocha -r ts-node/register 'test/**/*.spec.ts'",
    "coverage": "nyc npm run test",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{json,ts}\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^6.0.13"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "lint-staged": {
    "*.{json,ts}": "prettier --write"
  }
}
